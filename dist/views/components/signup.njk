<table>
	<tr>
		<td><strong>First name</strong></td>
		<td><input type="text" id="signup-firstname" placeholder="First name"></td>
	</tr>
	<tr>
		<td><strong>Last name</strong></td>
		<td><input type="text" id="signup-lastname" placeholder="Last name"></td>
	</tr>
	<tr>
		<td><strong>E-mail</strong></td>
		<td><input type="text" id="signup-email" placeholder="E-mail"></td>
	</tr>
	<tr>
		<td><strong>Password</strong></td>
		<td><input type="password" id="signup-password1" placeholder="Password"></td>
	</tr>
	<tr>
		<td><strong>Repeat password</strong></td>
		<td><input type="password" id="signup-password2" placeholder="Repeat password"></td>
	</tr>
	<tr>
		<td><strong>Request role</strong></td>
		<td>
			<select id="signup-role">
				<option value="user" selected>User</option>
				<option value="author">Author</option>
				<option value="editor">Copy Editor</option>
				<option value="executive">Executive Editor</option>
				<option value="admin">Administrator</option>
			</select>
		</td>
	</tr>
	<tr>
		<td><button class="btn" id="signup-btn">Sign me up!</button></td>
		<td></td>
	</tr>
</table>
